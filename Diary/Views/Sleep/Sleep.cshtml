@*@model Diary.Sleep*@

@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sleep</title>
</head>
<body>
    @using (Html.BeginForm("AddSleep","Sleep"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Sleep</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.Label("bedTime", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("bedTime", new { htmlAttributes = new { @class = "form-control" ,@id = "datetimepicker1"} })
                    @Html.ValidationMessage("bedTime", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("wakeUpTime", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("wakeUpTime", new { htmlAttributes = new { @class = "form-control", @id = "datetimepicker2" } })
                    @Html.ValidationMessage("wakeUpTime", "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @{
            Html.RenderPartial("_SleepList");
        }
    </div>
</body>
</html>
