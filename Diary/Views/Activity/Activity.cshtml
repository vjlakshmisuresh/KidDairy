@* @model Diary.Activity *@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Activity</title>
</head>
<body>
    @using (Html.BeginForm("AddActivity", "Activity")) 
    {
        @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Activity</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Activity Date", htmlAttributes: new { @class = "datefield, control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("activityDate", new { htmlAttributes = new { @class = "datefield, form-control", @id = "datetimepicker1" } })
            @Html.ValidationMessage("Activity_Date", "", new { @class = "text-danger" })
        </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
    
    <div>
        @{
            Html.RenderPartial("_ActivitiesList");
        }
    </div>
</body>
</html>
