@*@model Diary.Food*@

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Food</title>
</head>
<body>
    @using (Html.BeginForm("AddFood", "Food"))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Food</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("FoodType", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FoodType", new SelectList(new[]{"Breakfast",
   "Morning Snack","Lunch","Afternoon Snack","Dinner","Other"}))
                @Html.ValidationMessage("FoodType", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Description", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Date Taken", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("dateTaken", new { htmlAttributes = new { @class = "form-control", @id = "datetimepicker1" } })
                @Html.ValidationMessage("dateTaken", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
 
    <br/><br/>
         <div>
             @{
                 Html.RenderPartial("_FoodList");
             }
         </div>
</body>
</html>
